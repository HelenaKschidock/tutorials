            (7 6 10 11)
            (13 12 14 15)
        );
    }
    cplInlet
    {
        type patch;
        faces
        (
            (4 5 6 7)
            (4 12 13 5)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (11 10 9 8)
            (8 9 15 14)
        );
    }
    frontAndBack
    {
        type empty;
        faces
        (
//            (0 3 7 4)
//            (6 2 1 5)
            (6 5 9 10)
            (5 13 15 9)
            (12 4 8 14)
            (4 7 11 8)
        );
    }
