(
    ($xmin  $ymid  $zmin)
    ($xmax  $ymid  $zmin)
    ($xmax  $ymax  $zmin)
    ($xmin  $ymax  $zmin)
    ($xmin  $ymid  $zmid)
    ($xmax  $ymid  $zmid)
    ($xmax  $ymax  $zmid)
    ($xmin  $ymax  $zmid)
    ($xmin  $ymid  $zmax)
    ($xmax  $ymid  $zmax)
    ($xmax  $ymax  $zmax)
    ($xmin  $ymax  $zmax)
    ($xmin  $ymin  $zmid)
    ($xmax  $ymin  $zmid)
    ($xmin  $ymin  $zmax)
    ($xmax  $ymin  $zmax)
);

blocks
(
//    hex (0 1 2 3 4 5 6 7) ($xcells 20 50) sim0pleGrading (1 1 1)
    hex (4 5 6 7 8 9 10 11) ($xcells 16 64) simpleGrading (1 1 1)
    hex (12 13 5 4 14 15 9 8) ($xcells 16 64) simpleGrading (1 1 1)
);

